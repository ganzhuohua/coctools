                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="部件"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal" />

