                    android:hint="#XXXXXXXX"
                    android:paddingLeft="6dp"
                    android:text=""
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_analysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始分析">

                </Button>

